<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">
    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_sv_camera"/>
    <RelativeLayout
        android:alpha=".8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_options"
            android:id="@+id/id_btn_options"
            />

        <Button
            style="@style/ButtonCamera"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/id_btn_make_photo"
            android:layout_alignBaseline="@+id/id_btn_gallery"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:visibility="gone"
            android:background="@drawable/icon_gallery"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:text="Gallery"
            android:id="@+id/id_btn_gallery"/>

        <com.capricorn.RayMenu
            android:id="@+id/id_raymenu"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
    </RelativeLayout>
</RelativeLayout>

